extends ./AdminPartials/_base
block content
  .container
    .row
      .col-md-5.offset-md-3 
        form(action="/admin/product" method="post") 
          .mb-3
            label.form-label(for='exampleFormControlInput1') Title
            input#exampleFormControlInput1.form-control(type='text'  name="title")
          .mb-3
            label.form-label(for='exampleFormControlInput1') Image
            input#exampleFormControlInput1.form-control(type='text'  name="image")
          .mb-3
            label.form-label(for='exampleFormControlInput1') Description
            input#exampleFormControlInput1.form-control(type='text'  name="description")
          .mb-3
            label.form-label(for='exampleFormControlInput1') Price
            input#exampleFormControlInput1.form-control(type='text'  name="price")
          .mb-3
            select.form-select(aria-label='Default select example' name="category")
                each category in categories
                    option #{category.name}
          button.btn.btn-primary(type="submit") Save

